@model NorthwindTraders.Models.Customer

<body class="p-4">

    <div class="container">
        <table class="table table-bordered table-striped table-hover ">
            <tbody>
                <tr>
                    <th scope="row">ID:</th>
                    <td>@Model.CustomerID</td>
                </tr>
                <tr>
                    <th scope="row">Company:</th>
                    <td>@Model.CompanyName</td>
                </tr>
                <tr>
                    <th scope="row">Contact Name:</th>
                    <td>@Model.ContactName</td>
                </tr>
                <tr>
                    <th scope="row">Contact Title:</th>
                    <td>@Model.ContactTitle</td>
                </tr>
                <tr>
                    <th scope="row">Phone:</th>
                    <td>@Model.Phone</td>
                </tr>
                <tr>
                    <th scope="row">Address:</th>
                    <td>@Model.Address</td>
                </tr>
                <tr>
                    <th scope="row">City:</th>
                    <td>@Model.City</td>
                </tr>
                <tr>
                    <th scope="row">Region:</th>
                    <td>@Model.Region</td>
                </tr>
                <tr>
                    <th scope="row">Postal Code:</th>
                    <td>@Model.PostalCode</td>
                </tr>
                <tr>
                    <th scope="row">Country:</th>
                    <td>@Model.Country</td>
                </tr>
                <tr>
                    <th scope="row">Fax:</th>
                    <td>@Model.Fax</td>
                </tr>
            </tbody>
        </table>
    </div>

</body>




