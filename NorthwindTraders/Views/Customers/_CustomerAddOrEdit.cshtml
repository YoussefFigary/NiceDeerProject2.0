@model NorthwindTraders.Models.Customer
@{
    var contactTitles = ViewBag.ContactTitles as List<string>;
    var cities = ViewBag.Cities as List<string>;
    var countries = ViewBag.Countries as List<string>;
}

<form id="adddoredit-customer-form" class="row g-3 needs-validation" novalidate>
    @Html.HiddenFor(m => m.CustomerID)

    <div class="col-md-6">
        <label class="form-label">Company Name</label>
        <input name="CompanyName" value="@Model.CompanyName" class="form-control" placeholder="Company Name" required />
        <div class="invalid-feedback">Company name is required.</div>
    </div>

    <div class="col-md-6">
        <label class="form-label">Contact Name</label>
        <input name="ContactName" value="@Model.ContactName" class="form-control" placeholder="Contact Name" required />
        <div class="invalid-feedback">Contact name is required.</div>
    </div>

    <div class="col-md-6">
        <label class="form-label">Contact Title</label>
        <select name="ContactTitle" class="form-select" required>
            <option selected disabled value="">Choose...</option>
            @foreach (var title in contactTitles ?? new List<string>())
            {
                <option value="@title" @(title == Model.ContactTitle ? "selected" : "")>@title</option>
            }
        </select>
        <div class="invalid-feedback">Contact title is required.</div>
    </div>

    <div class="col-md-6">
        <label class="form-label">Phone</label>
        <input name="Phone" value="@Model.Phone" class="form-control" placeholder="Phone" required />
        <div class="invalid-feedback">Phone number is required.</div>
    </div>

    <div class="col-md-6">
        <label class="form-label">Address</label>
        <input name="Address" value="@Model.Address" class="form-control" placeholder="Address" required />
        <div class="invalid-feedback">Address is required.</div>
    </div>

    <div class="col-md-4">
        <label class="form-label">City</label>
        <select name="City" class="form-select" required>
            <option selected disabled value="">Choose...</option>
            @foreach (var c in cities ?? new List<string>())
            {
                <option value="@c" @(c == Model.City ? "selected" : "")>@c</option>
            }
        </select>
        <div class="invalid-feedback">City is required.</div>
    </div>

    <div class="col-md-4">
        <label class="form-label">Country</label>
        <select name="Country" class="form-select" required>
            <option selected disabled value="">Choose...</option>
            @foreach (var c in countries ?? new List<string>())
            {
                <option value="@c" @(c == Model.Country ? "selected" : "")>@c</option>
            }
        </select>
        <div class="invalid-feedback">Country is required.</div>
    </div>

    <div class="col-md-4">
        <label class="form-label">Region</label>
        <input name="Region" value="@Model.Region" class="form-control" placeholder="Region" />
        <div class="invalid-feedback">Region is required.</div>
    </div>

    <div class="col-md-4">
        <label class="form-label">Postal Code</label>
        <input name="PostalCode" value="@Model.PostalCode" class="form-control" placeholder="Postal Code" />
        <div class="invalid-feedback">Postal code is required.</div>
    </div>

    <div class="col-md-4">
        <label class="form-label">Fax</label>
        <input name="Fax" value="@Model.Fax" class="form-control" placeholder="Fax" />
        <div class="invalid-feedback">Fax is required.</div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button class="btn btn-primary" type="button" onclick="validateAndSave()">Save</button>
    </div>
</form>

