@model NorthwindTraders.Models.Supplier

<div class="modal fade" id="popupModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-fullscreen-xxl-down">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Supplier Details</h5>
                <!--<button type="button" class="close" data-BS-dismiss="modal">&times;</button>-->
            </div>
            <div class="modal-body">
               
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Supplier ID</th>
                            <th>Company Name</th>
                            <th>Contact Name</th>
                            <th>Contact Title</th>
                            <th>Address</th>
                            <th>City</th>
                            <th>Regien </th>
                            <th>Postal Code</th>
                            <th>Country</th>
                            <th>Phone</th>
                            <th>Fax</th>
                            <th>home page</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                        
                        <tr>
                            <td>@Model.SupplierID</td>
                            <td>@(Model.CompanyName ?? "N/A")</td>
                            <td>@(Model.ContactName ?? "N/A")</td>
                            <td>@(Model.ContactTitle ?? "N/A")</td>
                            <td>@(Model.Address ?? "N/A")</td>
                            <td>@(Model.City ?? "N/A")</td>
                            <td>@(Model.Region ?? "N/A")</td>
                            <td>@(Model.PostalCode ?? "N/A")</td>
                            <td>@(Model.Country ?? "N/A")</td>
                            <td>@(Model.Phone ?? "N/A")</td>
                            <td>@(Model.Fax ?? "N/A")</td>
                            <td>@(Model.HomePage ?? "N/A")</td>
                        </tr>
                        
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

