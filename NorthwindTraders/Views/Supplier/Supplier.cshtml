@model IEnumerable<NorthwindTraders.Models.Supplier>

<head>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<main>
    <div class="d-flex align-items-center mb-3">
        <h1 class="display-4 mb-0 me-3" style="line-height: 1;">Suppliers</h1>
        <button type="button" class="btn btn-success btn-lg" onclick="addOreditSupplier(0)">Add Supplier</button>
    </div>



    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Supplier ID</th>
                <th>Company Name</th>
                <th>City</th>
                <th>Country</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SupplierID</td>
                    <td>@item.CompanyName</td>
                    <td>@item.City</td>
                    <td>@item.Country</td>
                    <td>@item.Phone</td>
                    <td><button type="button" class="btn btn-primary" onclick="addOreditSupplier(@item.SupplierID)">E</button></td>
                    <td><button type="button" class="btn btn-danger" onclick="DeleteSuplier(@item.SupplierID)">D</button></td>
                    <td><button type="button" class="btn btn-secondary" onclick="DetailsSuplier(@item.SupplierID)">Details</button></td>
                </tr>
            }
        </tbody>
    </table>

</main>
