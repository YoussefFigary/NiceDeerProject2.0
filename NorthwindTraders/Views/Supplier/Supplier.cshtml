@model IEnumerable<NorthwindTraders.Models.Supplier>

<head>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

</head>
<main>
    <div class="d-flex align-items-center mb-3">
        <h1 class="display-4 mb-0 me-3" style="line-height: 1;">Suppliers</h1>
        <button type="button" class="btn btn-success btn-lg" onclick="addOreditSupplier(0)">Add Supplier</button>
    </div>



    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Supplier ID</th>
                <th>Company Name</th>
                <th>City</th>
                <th>Country</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SupplierID</td>
                    <td>@item.CompanyName</td>
                    <td>@item.City</td>
                    <td>@item.Country</td>
                    <td>@item.Phone</td>
                   <td>
                       <div class="btn-group">
                           <button type="button" class="btn btn-dark" onclick="customerDetails(@item.SupplierID)"> <i class="bi bi-eye-fill"></i></button>
                           <button type="button" class="btn btn-primary" onclick="DeleteSuplier(@item.SupplierID)"><i class="bi bi-pencil-fill"></i></button>
                           <button type="button" class="btn btn-danger" onclick="DeleteCustomer(@item.SupplierID)"><i class="bi bi-trash3-fill"></i></button>
                       </div>
                   </td>
                    

                </tr>
            }
        </tbody>
    </table>

</main>
<script>
    function

</script>