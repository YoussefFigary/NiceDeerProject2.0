﻿@model IEnumerable<NorthwindTraders.Models.Category>
@{
    ViewBag.Title = "Categories";
}
<head>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @*Bootstrap Icons*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>

<main>
    @Html.Partial("_SwallPartialView")
    <h1 class="display-4" style="line-height: 1; font-weight: 600;">Categories</h1>
    <div class="mt-3 mb-3">
        <a href="javascript:void(0)" class="btn btn-success btn-lg" onclick="addCategory()">
            <i class="bi bi-plus-circle-fill"></i> Add Category
        </a>
    </div>


    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th style="width: 120px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryID</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td>
                        <button type="button" class="btn btn-primary btn-sm"
                                onclick="editCategory('@item.CategoryID', '@item.CategoryName', '@item.Description')"
                                title="Edit">
                            <i class="bi bi-pencil-fill"></i>
                        </button>
                        <button type="button" class="btn btn-danger btn-sm"
                                onclick="confirmDelete('@item.CategoryID')"
                                title="Delete">
                            <i class="bi bi-trash3-fill"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</main>